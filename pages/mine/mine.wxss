
  /* 第一区域：VIP背景区域 */
  .vip-section {
    position: relative;
    height: 500rpx;
  }
  
  .custom-navbar {
    position: absolute;
    z-index: 100;
    background: transparent;
  }
  
  .nav-back {
    display: flex;
    align-items: center;
    padding: 20rpx 30rpx;
    color: white;
  }
  
  .back-icon {
    font-size: 48rpx;
    margin-right: 10rpx;
    margin-bottom: 8rpx;
    font-weight: bold;
  }
  
  .back-text {
    font-size: 32rpx;
  }
  
  .vip-bg {
    width: 100%;
    height:500rpx;
  }
  
  /* 第二区域：用户信息 */
  .user-section {
    position: relative;
    border-radius: 20rpx;
    background: white;
    z-index: 10;
    margin: 0 70rpx;
    box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

  
  .login-register {
    padding: 30rpx 0;
    border-bottom: 1rpx solid #eee;
    background-color: #985518;
  }
  
  .login-text {
    font-size: 36rpx;
    color: #333;
    font-weight: bold;
  }
  
  .user-basic-info {
    display: flex;
    align-items: center;
    padding: 40rpx 0;
    border-bottom: 1rpx solid #eee;
  }
  
  .user-avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin-right: 30rpx;
    border: 4rpx solid #f0f0f0;
  }
  
  .user-details {
    flex: 1;
  }
  
  .user-nickname {
    display: block;
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 10rpx;
  }
  
  .user-id {
    font-size: 28rpx;
    color: #999;
  }
  
  .user-stats {
    display: flex;
    justify-content: space-around;
    padding: 40rpx 0 20rpx;
  }
  
  .stat-item {
    text-align: center;
  }
  
  .stat-value {
    display: block;
    font-size: 36rpx;
    font-weight: bold;
    color: #e74c3c;
    margin-bottom: 10rpx;
  }
  
  .stat-label {
    font-size: 28rpx;
    color: #666;
  }
  
  /* 第三区域：功能入口 */
  .function-section {
    background: white;
    margin: 0 20rpx 20rpx;
    border-radius: 20rpx;
    padding: 30rpx;
    box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
  }
  
  .function-row {
    display: flex;
    justify-content: space-around;
  }
  
  .function-item {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .function-icon {
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 20rpx;
  }
  
  .function-text {
    font-size: 28rpx;
    color: #333;
  }
  
  /* 第四区域：我的订单 */
  .order-section {
    background: white;
    margin: 0 20rpx 20rpx;
    border-radius: 20rpx;
    padding: 30rpx;
    box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
  }
  
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 40rpx;
  }
  
  .section-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
  }
  
  .view-all {
    display: flex;
    align-items: center;
    color: #999;
  }
  
  .view-all-text {
    font-size: 28rpx;
    margin-right: 10rpx;
  }
  
  .arrow {
    font-size: 32rpx;
  }
  
  .order-types {
    display: flex;
    justify-content: space-between;
  }
  
  .order-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
  }
  
  .order-icon {
    width: 60rpx;
    height: 60rpx;
    margin-bottom: 20rpx;
  }
  
  .order-text {
    font-size: 24rpx;
    color: #666;
  }
  
  /* 第五区域：我的工具 */
  .tools-section {
    background: white;
    margin: 0 20rpx 20rpx;
    border-radius: 20rpx;
    padding: 30rpx;
    box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
  }
  
  .tools-grid {
    display: flex;
    flex-wrap: wrap;
  }
  
  .tool-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 33.33%;
    padding: 30rpx 0;
    box-sizing: border-box;
  }
  
  .tool-icon {
    width: 60rpx;
    height: 60rpx;
    margin-bottom: 20rpx;
  }
  
  .tool-text {
    font-size: 24rpx;
    color: #666;
  }
  
  /* 响应式适配 */
  @media (max-width: 375px) {
    .user-stats {
      padding: 30rpx 0 10rpx;
    }
    
    .stat-value {
      font-size: 32rpx;
    }
    
    .stat-label {
      font-size: 24rpx;
    }
  }