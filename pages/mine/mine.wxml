<!-- 第一区域：VIP背景和返回按钮 -->
<view class="vip-section" style="background-color: pink;">
  <!-- 自定义导航栏 -->
  <view class="custom-navbar" style="height: {{navBarHeight}}rpx; padding-top: {{statusBarHeight}}rpx;">
    <view class="nav-back" bindtap="goBack">
      <text class="back-icon">‹</text>
      <text class="back-text">返回</text>
    </view>
  </view>
  <!-- VIP背景图 -->
  <image class="vip-bg" src="http://121.37.136.16:8080/4-background.png" mode="aspectFill"></image>
</view>

<!-- 第二区域：用户信息 -->
<view class="user-section">
  <!-- 登录/注册区域 -->
  <view class="login-register" bindtap="handleLogin">
    <text class="login-text">点击登录/注册</text>
  </view>

  <!-- 用户基本信息 -->
  <view class="user-basic-info">
    <image class="user-avatar" src="{{userInfo.avatar || '/images/default-avatar.png'}}"></image>
    <view class="user-details">
      <text class="user-nickname">{{userInfo.nickname || '未登录'}}</text>
      <text class="user-id">ID: {{userInfo.id || '--'}}</text>
    </view>
  </view>

  <!-- 用户数据统计 -->
  <view class="user-stats">
    <view class="stat-item">
      <text class="stat-value">{{userStats.points || 0}}</text>
      <text class="stat-label">积分</text>
    </view>
    <view class="stat-item">
      <text class="stat-value">{{userStats.coupons || 0}}</text>
      <text class="stat-label">优惠券</text>
    </view>
    <view class="stat-item">
      <text class="stat-value">{{userStats.balance || '0.00'}}</text>
      <text class="stat-label">钱包</text>
    </view>
  </view>
</view>

<!-- 第三区域：功能入口 -->
<view class="function-section">
  <view class="function-row">
    <view class="function-item" bindtap="handleInvite">
      <image class="function-icon" src="http://121.37.136.16:8080/ldx.png"></image>
      <text class="function-text">老带新邀约</text>
    </view>
    <view class="function-item" bindtap="handleReview">
      <image class="function-icon" src="http://121.37.136.16:8080/jf.png"></image>
      <text class="function-text">评价返积分</text>
    </view>
  </view>
</view>

<!-- 第四区域：我的订单 -->
<view class="order-section">
  <view class="section-header">
    <text class="section-title">我的订单</text>
    <view class="view-all" bindtap="viewAllOrders">
      <text class="view-all-text">查看全部</text>
      <text class="arrow">›</text>
    </view>
  </view>

  <view class="order-types">
    <view class="order-item" bindtap="goToOrderList" data-type="pendingPayment">
      <image class="order-icon" src="http://121.37.136.16:8080/dzf.png"></image>
      <text class="order-text">待支付</text>
    </view>
    <view class="order-item" bindtap="goToOrderList" data-type="pendingConfirm">
      <image class="order-icon" src="http://121.37.136.16:8080/dqd.png"></image>
      <text class="order-text">待确定</text>
    </view>
    <view class="order-item" bindtap="goToOrderList" data-type="pendingReceive">
      <image class="order-icon" src="http://121.37.136.16:8080/dsk.png"></image>
      <text class="order-text">待收款</text>
    </view>
    <view class="order-item" bindtap="goToOrderList" data-type="pendingReserve">
      <image class="order-icon" src="http://121.37.136.16:8080/dyd.png"></image>
      <text class="order-text">待预定</text>
    </view>
    <view class="order-item" bindtap="goToOrderList" data-type="afterSale">
      <image class="order-icon" src="http://121.37.136.16:8080/sh.png"></image>
      <text class="order-text">售后</text>
    </view>
  </view>
</view>

<!-- 第五区域：我的工具 -->
<view class="tools-section">
  <view class="section-header">
    <text class="section-title">我的工具</text>
  </view>

  <view class="tools-grid">
    <view class="tool-item" bindtap="goToCoupons">
      <image class="tool-icon" src="http://121.37.136.16:8080/yhq.png"></image>
      <text class="tool-text">优惠券</text>
    </view>
    <view class="tool-item" bindtap="goToCart">
      <image class="tool-icon" src="http://121.37.136.16:8080/gwc.png"></image>
      <text class="tool-text">购物车</text>
    </view>
    <view class="tool-item" bindtap="goToFavorites">
      <image class="tool-icon" src="http://121.37.136.16:8080/wdsc.png"></image>
      <text class="tool-text">我的收藏</text>
    </view>
    <view class="tool-item" bindtap="goToTravelers">
      <image class="tool-icon" src="http://121.37.136.16:8080/cylk.png"></image>
      <text class="tool-text">常用旅客</text>
    </view>
    <view class="tool-item" bindtap="contactCustomerService">
      <image class="tool-icon" src="http://121.37.136.16:8080/lxkf.png"></image>
      <text class="tool-text">联系客服</text>
    </view>
    <view class="tool-item" bindtap="shareApp">
      <image class="tool-icon" src="http://121.37.136.16:8080/fxhy.png"></image>
      <text class="tool-text">分享好友</text>
    </view>
  </view>
</view>

<view >
  <image  class="footer" src="http://121.37.136.16:8080/jingcai.png"></image>
</view>