.nav-bar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 88rpx;
    padding-top: 40rpx;
    display: flex;
    align-items: center;
    background-color: transparent;
    z-index: 999;
    padding-left: 20rpx;
    padding-right: 20rpx;
    box-sizing: border-box;
}

/* 左侧 logo */
.nav-img {
    width: 82rpx;
    height: 34rpx;
}

/* 搜索框容器（半透明 + 缩短宽度） */
.search-box {
    width: 50%;
    /* ✅ 控制搜索框长度，改这里就能缩短 */
    height: 60rpx;
    margin-left: 20rpx;
    display: flex;
    align-items: center;
    background: rgba(255, 255, 255, 0.3);
    border-radius: 30rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
}

/* 轮播图样式  */
.swiper {
    height: 490rpx;
    position: relative;
    border-radius: 0 0 16rpx 16rpx;
    overflow: hidden;
    z-index: 1;
}


.swiper image {
    width: 100%;
    height: 100%;
}



/* 品牌介绍区域 */
.brand-intro {
    width: 375px;
    height: 230px;
    background-image: url('http://121.37.136.16:8080/wuyan.png');
    background-repeat: no-repeat;
    position: relative;
    margin-top: -74rpx;
    z-index: 1;
    padding-top: 74rpx;
}

.brand-grid {
    display: flex;
    flex-wrap: wrap;
    /* 自动换行 */
    justify-content: space-between;
    /* 每行等间距 */
    padding: 20rpx;
}

.brand-item {
    width: 30%;
    /* 每行 3 个 */
    margin-bottom: 30rpx;
    /* 行间距 */
    display: flex;
    justify-content: center;
    align-items: center;
}

.brand-item image {
    width: 132rpx;
    height: 166rpx;
}

